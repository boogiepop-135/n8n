{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "n8n start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "N8N_BASIC_AUTH_ACTIVE": "true",
        "N8N_BASIC_AUTH_USER": "admin",
        "N8N_BASIC_AUTH_PASSWORD": "mullblue2025",
        "N8N_HOST": "0.0.0.0",
        "N8N_PORT": "5678",
        "N8N_PROTOCOL": "https",
        "N8N_USER_FOLDER": "/home/node/.n8n",
        "N8N_DIAGNOSTICS_ENABLED": "false",
        "N8N_LOG_LEVEL": "info",
        "DB_TYPE": "postgresdb",
        "DB_POSTGRESDB_HOST": "{{Postgres.HOST}}",
        "DB_POSTGRESDB_PORT": "{{Postgres.PORT}}",
        "DB_POSTGRESDB_DATABASE": "{{Postgres.NAME}}",
        "DB_POSTGRESDB_USER": "{{Postgres.USER}}",
        "DB_POSTGRESDB_PASSWORD": "{{Postgres.PASSWORD}}",
        "N8N_ENCRYPTION_KEY": "mullblue-encryption-key-2025",
        "WEBHOOK_URL": "https://{{RAILWAY_PUBLIC_DOMAIN}}",
        "N8N_AI_ENABLED": "true"
      }
    }
  }
}
